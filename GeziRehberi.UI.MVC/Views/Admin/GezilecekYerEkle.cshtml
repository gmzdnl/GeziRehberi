@using GeziRehberi.Model
@model VisitingPlaces
@{
    ViewBag.Title = "GezilecekYerEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Yeni Yer</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "Adını Giriniz " })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.Description, new { @class = "form-control", placeholder = "Açıklama Giriniz" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.Address, new { @class = "form-control", placeholder = "Adresini Giriniz" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.CityID, new { @class = "form-control", placeholder = "Şehir Giriniz" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control", placeholder = "Fotoğrafın Adresini Giriniz" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>
<div>
    @if (ViewBag.IsSuccess != null)
    {
        <span class="alert alert-danger">Kaydetme Başarısız!</span>

    }
</div>
